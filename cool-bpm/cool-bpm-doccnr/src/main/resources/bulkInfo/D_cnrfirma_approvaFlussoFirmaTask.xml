<bulkInfo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.cnr.it/schema/BulkInfo" xsi:schemaLocation="http://www.cnr.it/schema/BulkInfo BulkInfo.xsd"
	shortDescription="cnrfirma Approva Flusso Firma Task" longDescription="cnrfirma Approva Flusso Firma Task"
	cmisTypeName="D:cnrfirma:approvaFlussoFirmaTask" cmisQueryName="cnrfirma:approvaFlussoFirmaTask">

	<fieldProperty
		labelClass="control-label"
		visible="true"
		jsonlist='[{
				"defaultLabel" : "Approva Documento",
				"label" : "Approva Documento",
				"key" : "SimpleApprove"
			}, {
				"defaultLabel" : "Approva Documento con Firma",
				"label" : "Approva Documento con Firma",
				"key" : "ComplexApprove"
			}, {
				"defaultLabel" : "Parere Ufficio",
				"label" : "Parere Ufficio",
				"key" : "AskGroupOpinion"
			}, {
				"defaultLabel" : "Parere Utente",
				"label" : "Parere Utente",
				"key" : "AskUserOpinion"
			}, {
				"defaultLabel" : "Rifiuta Documento",
				"label" : "Rifiuta Documento",
				"key" : "Reject"
			}
		]'
		name="wfcnr:reviewOutcome"
		inputType="SELECT"
		property="wfcnr:reviewOutcome"
		widget="ui.select"/>
		 		
	<fieldProperty 
		name="bpm:groupAssignee" 
		property="bpm:groupAssignee" 
		label="label.bpm.groupAssignee"
		jsonlabel='{
					 "key" : "label.cnrfirma.submitFlussoFirmaTask.bpm.groupAssignee",
					 "default" : "Ufficio di Competenza:"
					}'
		inputType="TEXT" 
		placeholder="placeholder.cnrfirma.submitFlussoFirmaTask.bpm.groupAssignee"
		labelClass="control-label"
		nullable="false"
		jsonsettings='{"groupsOnly":true}'
		jsonvalidator='{"requiredWidget": true}'
		widget="ui.authority"
		/>

	<fieldProperty 
		name="bpm:assignee"
		property="bpm:assignee"
		label="Utente di Competenza"
		placeholder="Inserisci Nome Utente"
		inputType="TEXT"
		class="input-xlarge"
		labelClass="control-label"
		jsonsettings='{"usersOnly":true}'
		jsonvalidator='{"requiredWidget": true}'
		widget="ui.authority" />

	<fieldProperty
		name="cnrfirma:nodeRefFolderToLink"
		property="cnrfirma:nodeRefFolderToLink"
		label="Folder di destinazione:"
		placeholder="seleziona il Folder"
		inputType="TEXT"
		widget="ui.tree"
		jsonvalidator='{"required": false}' />
		
	<fieldProperty
		name="bpm:comment"
		property="bpm:comment"
		label="label.bpm.comment"
		inputType="TEXTAREA"
		rows="3"
		class="input-xlarge"
		labelClass="control-label"
		nullable="false" />
		
	<fieldProperty
		name="cnrfirma:userFirma"
		property="cnrfirma:userFirma"
		label="id utente"
		inputType="TEXT"
		class="input-xlarge"
		labelClass="control-label"
		jsonvalidator='{"required": true}' />

	<fieldProperty
		name="cnrfirma:userPwFirma"
		property="cnrfirma:userPwFirma"
		label="pw utente"
		inputType="TEXT"
		class="input-xlarge"
		labelClass="control-label"
		jsonvalidator='{"required": true}' />

	<fieldProperty
		name="cnrfirma:pinFirma"
		property="cnrfirma:pinFirma"
		label="PIN"
		inputType="TEXT"
		class="input-xlarge"
		labelClass="control-label"
		jsonvalidator='{"required": true}' />
		
	<fieldProperty
		name="cnrfirma:codiceDocumentoUfficio"
		property="cnrfirma:codiceDocumentoUfficio"
		label="codice Documento"
		inputType="TEXT"
		class="input-xlarge"
		labelClass="control-label"
		jsonvalidator='{"required": false}' />
		
	<formFieldProperty name="cnrfirma:nodeRefFolderToLink" />
	<formFieldProperty name="wfcnr:reviewOutcome" />
	<formFieldProperty name="bpm:groupAssignee" />
	<formFieldProperty name="bpm:assignee" />
	<formFieldProperty name="bpm:comment" />
	<formFieldProperty name="cnrfirma:userFirma" />
	<formFieldProperty name="cnrfirma:userPwFirma" />
	<formFieldProperty name="cnrfirma:pinFirma" />
	<formFieldProperty name="cnrfirma:codiceDocumentoUfficio" />
		
		<!-- FORM -->
	<form name="SimpleApprove">
		<formFieldProperty name="cnrfirma:nodeRefFolderToLink" />
		<formFieldProperty name="cnrfirma:codiceDocumentoUfficio" />
		<formFieldProperty name="bpm:comment" />
	</form>
	<form name="ComplexApprove">
		<formFieldProperty name="cnrfirma:userFirma" />
		<formFieldProperty name="cnrfirma:userPwFirma" />
		<formFieldProperty name="cnrfirma:pinFirma" />
		<formFieldProperty name="cnrfirma:nodeRefFolderToLink" />
		<formFieldProperty name="cnrfirma:codiceDocumentoUfficio" />
		<formFieldProperty name="bpm:comment" />
	</form>
	<form name="AskGroupOpinion">
		<formFieldProperty name="bpm:groupAssignee" />
		<formFieldProperty name="bpm:comment" />
	</form>
	<form name="AskUserOpinion">
		<formFieldProperty name="bpm:assignee" />
		<formFieldProperty name="bpm:comment" />
	</form>
	<form name="Reject">
		<formFieldProperty name="bpm:comment" />
	</form>
	
</bulkInfo>