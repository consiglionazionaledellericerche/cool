<bulkInfo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.cnr.it/schema/BulkInfo" xsi:schemaLocation="http://www.cnr.it/schema/BulkInfo BulkInfo.xsd"
	shortDescription="cnrfirma Start FlussoFirma Task" longDescription="cnrfirma Start FlussoFirma Task"
	cmisTypeName="D:cnrfirma:submitFlussoFirmaTask" cmisQueryName="cnrfirma:submitFlussoFirmaTask">


	<fieldProperty 
		name="bpm:groupAssignee" 
		property="bpm:groupAssignee" 
		label="label.bpm.groupAssignee"
		jsonlabel='{
					 "key" : "label.cnrfirma.submitFlussoFirmaTask.bpm.groupAssignee",
					 "default" : "Ufficio Assegnatario:"
					}'
		inputType="TEXT" 
		placeholder="placeholder.cnrfirma.submitFlussoFirmaTask.bpm.groupAssignee"
		labelClass="control-label"
		nullable="false"
		jsonsettings='{"groupsOnly":true}'
		jsonvalidator='{"requiredWidget": true}'
		widget="ui.authority"
		/>
		
	<fieldProperty
		name="bpm:workflowDescription"
		property="bpm:workflowDescription"
		label="label.bpm.workflowDescription"
		inputType="TEXTAREA"
		rows="3"
		class="input-xlarge"
		labelClass="control-label"
		nullable="false" />
		
	<fieldProperty
		name="bpm:comment"
		property="bpm:comment"
		jsonlabel='{
				"key" : "label.bpm.comment",
				"default" : "Commento"
				}'
		inputType="TEXTAREA"
		rows="3"
		class="input-xlarge"
		labelClass="control-label"
		nullable="false" />
		
	<fieldProperty
		name="bpm:workflowDueDate"
		property="bpm:workflowDueDate"
		label="label.bpm.workflowDueDate"
		placeholder="placeholder.bpm.workflowDueDate"
		inputType="TEXT"
		type="date"
		class="input-xlarge"
		labelClass="control-label"
		nullable="false" />
		
	<fieldProperty
		name="bpm:workflowPriority"
		property="bpm:workflowPriority"
		label="label.bpm.workflowPriority"
		inputType="RADIOGROUP"
		widget="ui.radio"
		nullable="false"
		type="buttonset"
		jsonlist='[
			{
			 "key" : "1",
			 "label" : "label.workflow.priority.1",
			 "defaultLabel" : "media"
			},
			{
			 "key" : "3",
			 "label" : "label.workflow.priority.3",
			 "defaultLabel" : "importante"
			},
			{
			 "key" : "5",
			 "label" : "label.workflow.priority.5",
			 "defaultLabel" : "critica"
			}
		]'
		default="1"
		labelClass="control-label" />

	<fieldProperty
		name="bpm:priority"
		property="bpm:priority"
		visible="false" />
		
	<fieldProperty
		name="cm:owner"
		property="cm:owner"
		visible="false" />

	<fieldProperty 
		name="wfcnr:groupName" 
		property="wfcnr:groupName" 
		jsonlabel='{
					 "key" : "label.wfcnr.groupName",
					 "default" : "Ufficio"
					}'
		inputType="TEXT" 
		class="input-xlarge"
		labelClass="control-label"
		nullable="false"
		jsonvalidator='{"requiredWidget": true}'
		widget="ui.group" />
		
		
	<!-- formFieldProperty  -->
	<!-- Default  -->

		<formFieldProperty name="wfcnr:groupName" />
		<formFieldProperty name="bpm:groupAssignee" />
		<formFieldProperty name="bpm:workflowDescription" />
		<formFieldProperty name="bpm:comment" />
		<formFieldProperty name="bpm:workflowDueDate" />
		<formFieldProperty name="bpm:workflowPriority" />
		
	<!-- Start  -->
	<form name="Start">
		<formFieldProperty name="wfcnr:groupName" />
		<formFieldProperty name="bpm:groupAssignee" />
		<formFieldProperty name="bpm:workflowDescription" />
		<formFieldProperty name="bpm:comment" />
		<formFieldProperty name="bpm:workflowDueDate" />
		<formFieldProperty name="bpm:workflowPriority" />
	</form>

</bulkInfo>