<bulkInfo xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://www.cnr.it/schema/BulkInfo" 
	shortDescription="WFCNR adHocTask" longDescription="WFCNR Task"
	cmisTypeName="D:wfcnr:adhocTask" cmisQueryName="wfcnr:adhocTask">
	
	<fieldProperty
		name="bpm:comment"
		property="bpm:comment"
		label="label.bpm.comment"
		inputType="TEXTAREA"
		rows="3"
		class="input-xlarge"
		labelClass="control-label"
		nullable="false" />
		
	<fieldProperty 
		name="bpm:assignee"
		property="bpm:assignee"
		label="Utente di Competenza"
		placeholder="Inserisci Nome Utente"
		inputType="TEXT"
		class="input-xlarge"
		labelClass="control-label"
		jsonsettings='{"usersOnly":true}'
		jsonvalidator='{"requiredWidget": true}'
		widget="ui.authority" />

	<formFieldProperty name="bpm:comment" />
	<formFieldProperty name="bpm:assignee" />

	
	<form name="Done">
		<formFieldProperty name="bpm:assignee" />
		<formFieldProperty name="bpm:comment" />
	</form>

</bulkInfo>