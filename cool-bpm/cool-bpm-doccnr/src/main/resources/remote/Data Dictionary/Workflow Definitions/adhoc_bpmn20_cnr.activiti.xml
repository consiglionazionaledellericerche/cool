<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:activiti="http://activiti.org/bpmn" xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI" xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC" xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI" typeLanguage="http://www.w3.org/2001/XMLSchema" expressionLanguage="http://www.w3.org/1999/XPath" targetNamespace="http://alfresco.org">
  <process id="activitiCnrAdhoc" name="Flusso Adhoc" isExecutable="true">
    <extensionElements>
      <activiti:executionListener event="start" class="org.alfresco.repo.workflow.activiti.listener.ScriptExecutionListener">
        <activiti:field name="runAs">
          <activiti:string><![CDATA[admin]]></activiti:string>
        </activiti:field>
        <activiti:field name="script">
          <activiti:string><![CDATA[<import resource="/Company Home/Data Dictionary/Scripts/wfContatori.js">
						wfContatori.inizializza();]]></activiti:string>
        </activiti:field>
      </activiti:executionListener>
    </extensionElements>
    <startEvent id="start" name="avvia" activiti:formKey="wfcnr:submitAdhocTask">
      <documentation>avvio flusso AdHoc</documentation>
    </startEvent>
    <sequenceFlow id="flow1" name="avvia" sourceRef="start" targetRef="adhocTask"></sequenceFlow>
    <userTask id="adhocTask" name="ASSEGNA" activiti:assignee="${bpm_assignee.properties.userName}" activiti:formKey="wfcnr:adhocTask">
      <documentation>Assegna Task Ad Hoc</documentation>
      <extensionElements>
        <activiti:taskListener event="create" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="runAs">
            <activiti:string><![CDATA[admin]]></activiti:string>
          </activiti:field>
          <activiti:field name="script">
            <activiti:string><![CDATA[if (typeof bpm_workflowDueDate != 'undefined') {
								task.dueDate = bpm_workflowDueDate;
							}
							if (typeof bpm_workflowPriority != 'undefined') {
								task.priority = bpm_workflowPriority;
							}
							
							if (bpm_package != null && bpm_package.children !== null) {
								var i = 0;
								for (i = 0; i < bpm_package.children.length; i++) {
									var document = bpm_package.children[i];
									//logger.error("########################  doc nr " + i + " -- " + document.properties.name + " ########################");
									//logger.error("########################  permissions  = " + document.permissions + " ########################");
									if (bpm_assignee != null) {
										var nome_utente = bpm_assignee.properties["cm:userName"];
										//logger.error("########################  assegno i permessi consumer all'utente assegnatario= " + nome_utente + " ########################");
										document.setPermission("Consumer", nome_utente);
										document.save();
										//logger.error("########################  new permissions  = " + document.permissions + " ########################");
									}
								}
							}]]></activiti:string>
          </activiti:field>
        </activiti:taskListener>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow2" name="termina" sourceRef="adhocTask" targetRef="verifyTaskDone"></sequenceFlow>
    <userTask id="verifyTaskDone" name="VERIFICA COMPLETAMENTO" activiti:assignee="${initiator.exists() ? initiator.properties.userName : 'admin'}" activiti:formKey="wfcnr:completedAdhocTask">
      <documentation>Verifica il completamento del task</documentation>
      <extensionElements>
        <activiti:taskListener event="create" class="org.alfresco.repo.workflow.activiti.tasklistener.ScriptTaskListener">
          <activiti:field name="runAs">
            <activiti:string><![CDATA[admin]]></activiti:string>
          </activiti:field>
          <activiti:field name="script">
            <activiti:string><![CDATA[<import resource="/Company Home/Data Dictionary/Scripts/wfUtils.js">
						if (typeof bpm_workflowDueDate != 'undefined') {
								task.dueDate = bpm_workflowDueDate;
							}
							if (typeof bpm_workflowPriority != 'undefined') {
								task.priority = bpm_workflowPriority;
							}
							if (typeof wfcnr_notifyMe != 'undefined') {
								if (wfcnr_notifyMe) {
									var destinatario = initiator;
									var testo = "Avvio di un flusso documentale";
									var isWorkflowPooled = false;
									var ufficioAssegnatario = '';
									wfUtils.inviaNotifica(destinatario, testo, isWorkflowPooled, ufficioAssegnatario);
								}
							}]]></activiti:string>
          </activiti:field>
        </activiti:taskListener>
      </extensionElements>
    </userTask>
    <sequenceFlow id="flow3" name="fine" sourceRef="verifyTaskDone" targetRef="theEnd"></sequenceFlow>
    <endEvent id="theEnd" name="fine"></endEvent>
  </process>
  <bpmndi:BPMNDiagram id="BPMNDiagram_activitiCnrAdhoc">
    <bpmndi:BPMNPlane bpmnElement="activitiCnrAdhoc" id="BPMNPlane_activitiCnrAdhoc">
      <bpmndi:BPMNShape bpmnElement="start" id="BPMNShape_start">
        <omgdc:Bounds height="35.0" width="35.0" x="30.0" y="208.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="adhocTask" id="BPMNShape_adhocTask">
        <omgdc:Bounds height="71.0" width="105.0" x="120.0" y="190.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="verifyTaskDone" id="BPMNShape_verifyTaskDone">
        <omgdc:Bounds height="71.0" width="105.0" x="290.0" y="190.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNShape bpmnElement="theEnd" id="BPMNShape_theEnd">
        <omgdc:Bounds height="35.0" width="35.0" x="460.0" y="208.0"></omgdc:Bounds>
      </bpmndi:BPMNShape>
      <bpmndi:BPMNEdge bpmnElement="flow1" id="BPMNEdge_flow1">
        <omgdi:waypoint x="65.0" y="225.0"></omgdi:waypoint>
        <omgdi:waypoint x="120.0" y="225.0"></omgdi:waypoint>
        <bpmndi:BPMNLabel>
          <omgdc:Bounds height="14.0" width="100.0" x="-22.0" y="0.0"></omgdc:Bounds>
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow2" id="BPMNEdge_flow2">
        <omgdi:waypoint x="225.0" y="225.0"></omgdi:waypoint>
        <omgdi:waypoint x="290.0" y="225.0"></omgdi:waypoint>
        <bpmndi:BPMNLabel>
          <omgdc:Bounds height="14.0" width="100.0" x="-22.0" y="0.0"></omgdc:Bounds>
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
      <bpmndi:BPMNEdge bpmnElement="flow3" id="BPMNEdge_flow3">
        <omgdi:waypoint x="395.0" y="225.0"></omgdi:waypoint>
        <omgdi:waypoint x="460.0" y="225.0"></omgdi:waypoint>
        <bpmndi:BPMNLabel>
          <omgdc:Bounds height="14.0" width="100.0" x="-17.0" y="0.0"></omgdc:Bounds>
        </bpmndi:BPMNLabel>
      </bpmndi:BPMNEdge>
    </bpmndi:BPMNPlane>
  </bpmndi:BPMNDiagram>
</definitions>