<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 3.0//EN" "urlrewrite3.0.dtd">
<urlrewrite default-match-type="wildcard">

	<rule>
		<from>/rest/**</from>
		<to>/rest/$1</to>
	</rule>

	<!-- bower / grunt paths -->
	<rule>
		<from>/</from>
		<to>/rest/static/ng/dist/index.html</to>
	</rule>
<!-- 	<rule>
		<from>/bower_components/**</from>
		<to>/rest/static/ng/bower_components/$1</to>
	</rule> -->
	<rule>
		<from>/**</from>
		<to>/rest/static/ng/dist/$1</to>
	</rule>

</urlrewrite>
