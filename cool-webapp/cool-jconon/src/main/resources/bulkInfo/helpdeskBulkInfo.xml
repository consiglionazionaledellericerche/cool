<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<bulkInfo xmlns="http://www.cnr.it/schema/BulkInfo_v2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" longDescription="HelpDesk"
	shortDescription="HelpDesk" xsi:schemaLocation="http://www.cnr.it/schema/BulkInfo_v2 BulkInfo_v2">
	<fieldProperty inputType="TEXT" label="label.helpdesk.firstName"
		name="firstName" property="firstName">
		<jsonvalidator maxlength="50" required="true" />
	</fieldProperty>
	<fieldProperty inputType="TEXT" label="label.helpdesk.lastName"
		name="lastName" property="lastName">
		<jsonvalidator maxlength="50" required="true" />
	</fieldProperty>
	<fieldProperty inputType="TEXT" label="label.helpdesk.email"
		name="email" property="email" tooltip="tooltip.helpdesk.email">
		<jsonvalidator email="true" maxlength="50" required="true" />
	</fieldProperty>
	<fieldProperty inputType="TEXT" label="label.helpdesk.confirmEmail"
		name="confirmEmail" property="confirmEmail">
		<jsonvalidator email="true" equalTo="#email" maxlength="50"
			required="true" />
	</fieldProperty>
	<fieldProperty inputType="TEXT" label="label.helpdesk.phoneNumber"
		name="phoneNumber" property="phoneNumber" validator="number: true" />
	<fieldProperty inputType="TEXT" label="label.helpdesk.subject"
		name="subject" property="subject">
		<jsonvalidator maxlength="900" required="true" />
	</fieldProperty>
	<fieldProperty i18n="true" inputType="TEXTAREA"
		label="label.helpdesk.message" name="message" property="message">
		<jsonvalidator maxlength="3070" />
	</fieldProperty>/&gt;
	<fieldProperty class="input-xxlarge" i18n="true"
		inputType="SELECT" label="label.helpdesk.cmisCallId" name="cmisCallId"
		property="cmisCallId" widget="ui.select">
		<jsonvalidator requiredWidget="false" />
	</fieldProperty>
	<fieldProperty inputType="RADIOGROUP" label="label.helpdesk.category"
		labelClass="control-label" name="category" property="category" type="buttonset"
		widget="ui.radio">
		<jsonlist>
			<listElement defaultLabel="Problema Informatico" key="2"
				label="label.helpdesk.category.tecnico" name="category_informatico"
				property="category" value="2" />
			<listElement defaultLabel="Problema Normativo" key="3"
				label="label.helpdesk.category.normativo" name="category_normativo"
				property="category" value="3" />
			<listElement defaultLabel="Problema di tipo scientifico"
				key="4" label="label.helpdesk.category.scientifico" name="category_normativo"
				property="category" value="4" />
			<listElement defaultLabel="MobilitÃ  Esterna" key="5"
				label="label.helpdesk.category.mobility" name="external_mobility"
				property="category" value="5" />
		</jsonlist>
		<jsonvalidator requiredWidget="true" />
	</fieldProperty>


	<form name="helpDesk">
		<formFieldProperty class="medium-field" name="firstName" />
		<formFieldProperty class="medium-field" name="lastName"
			same-line="true" />
		<formFieldProperty class="medium-field" name="email" />
		<formFieldProperty class="medium-field" name="confirmEmail"
			same-line="true" />
		<formFieldProperty class="medium-field" name="phoneNumber" />
		<formFieldProperty class="medium-field" name="category"
			same-line="true" />
		<formFieldProperty name="cmisCallId" style="width:710px" />
		<formFieldProperty class="large-field" name="subject" />
		<formFieldProperty class="input-xxlarge" name="message"
			rows="5" />
	</form>



	<form name="user_HelpDesk">
		<formFieldProperty class="medium-field" name="firstName" />
		<formFieldProperty class="medium-field" name="lastName"
			same-line="true" />
		<formFieldProperty class="medium-field" name="email"
			same-line="true" />
		<formFieldProperty class="medium-field" name="category" />
		<formFieldProperty name="cmisCallId" style="width:710px" />
		<formFieldProperty class="large-field" name="subject" />
		<formFieldProperty class="input-xxlarge" name="message"
			rows="5" />
	</form>

	<form name="reopen_HelpDesk">
		<formFieldProperty class="input-xxlarge" name="message"
			rows="8" style="width:910px">
			<jsonvalidator required="true" />
		</formFieldProperty>
	</form>
</bulkInfo>