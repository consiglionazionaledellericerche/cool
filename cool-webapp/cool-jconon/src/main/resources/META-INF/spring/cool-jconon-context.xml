<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
		http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<import resource="classpath*:META-INF/cool-common-web-context.xml" />
	<import resource="classpath*:META-INF/cool-model-context.xml" />

	<import resource="cool-people-context.xml" />


	<bean class="org.springframework.extensions.surf.util.ResourceBundleBootstrapComponent">
		<property name="resourceBundles">
			<list>
				<value>surf.webscripts.messages.cool-jconon</value>
				<value>surf.webscripts.messages.call</value>
			</list>
		</property>
	</bean>


	<bean id="callService" class="it.cnr.jconon.service.call.CallService"/>
	<bean id="applicationService" class="it.cnr.jconon.service.application.ApplicationService"/>

	<!-- Model Upgrade -->
	<bean class="it.cnr.jconon.service.model.upgrade.UpgradeModel" init-method="upgradeModel">
		<property name="cmisPathResource" value="/Data Dictionary/Models/jconon_call_folder.xml"/>
		<property name="pathModelBefore" value="/modelupgrade/jconon_call_folder_elenco_aspect_before.xml"/>
		<property name="pathModelAfter" value="/modelupgrade/jconon_call_folder_elenco_aspect_after.xml"/>
		<property name="modelVersionBefore" value="1.0"/>
		<property name="modelVersionAfter" value="1.1"/>
		<property name="typeName" value="jconon_call:folder"/>
		<property name="propertyName" value="jconon_call:elenco_aspects"/>
	</bean>

	<!-- End Model Upgrade -->
	<!-- Cache Bean Definition -->
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationAspects"/>
		<property name="parentTypes">
			<list>
				<value>P:jconon_application:aspects</value>
			</list>
		</property>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationAttachments"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:document</value>
			</list>
		</property>
		<property name="defaultTypes">
			<list>
				<value>D:jconon_curriculum_vitae:attachment</value>
				<value>D:jconon_documento_riconoscimento:attachment</value>
				<value>D:jconon_tesi_laurea:attachment</value>
				<value>D:jconon_allegato_generico:attachment</value>
				<value>D:jconon_nulla_osta_altro_ente:attachment</value>
				<value>D:jconon_dic_sost:attachment</value>
				<value>D:jconon_modello_verifica_attivita:attachment</value>
				<value>D:jconon_relazione_attivita_svolta:attachment</value>
				<value>D:jconon_pagamenti_diritti_segreteria:attachment</value>
				<value>D:jconon_pubblicazione:attachment</value>
				<value>D:jconon_domanda_facsimile:attachment</value>
				<value>D:jconon_esclusione:attachment</value>
				<value>D:jconon_riammissione:attachment</value>
				<value>D:jconon_rinuncia:attachment</value>
			</list>
		</property>
		<property name="aspect" value="P:jconon_attachment:generic_document"/>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationCurriculums"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:cv_element</value>
			</list>
		</property>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistTypeWithMandatoryAspects"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:cv_element</value>
				<value>D:jconon_attachment:prodotto</value>
				<value>F:jconon_call:folder</value>
			</list>
		</property>
		<property name="includeMandatoryAspects"  value="true"/>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationProdotti"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:prodotto</value>
			</list>
		</property>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistCallAttachments"/>
		<property name="parentTypes">
			<list>
				<value>D:jconon_attachment:call_abstract</value>
			</list>
		</property>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationNoAspectsItalian"/>
		<property name="parentTypes">
			<list>
			</list>
		</property>
		<property name="defaultTypes">
			<list>
				<value>P:jconon_application:aspect_godimento_diritti</value>
			</list>
		</property>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationAttachmentChildService">
		<property name="jsonlistname" value="jsonlistApplicationNoAspectsForeign"/>
		<property name="parentTypes">
			<list>
			</list>
		</property>
		<property name="defaultTypes">
			<list>
				<value>P:jconon_application:aspect_iscrizione_liste_elettorali</value>
			</list>
		</property>
	</bean>
	<bean id="documentsNotRequired" class="org.springframework.beans.factory.config.ListFactoryBean">
	  <property name="sourceList">
	    <list>
	      <value>D:jconon_allegato_generico:attachment_mono</value>
	    </list>
	  </property>
	</bean>
	<bean class="it.cnr.jconon.service.cache.ApplicationFieldNotRequiredService"/>
	<bean id="callTypeService" class="it.cnr.jconon.service.cache.CallTypeService"/>
	<bean class="it.cnr.jconon.service.cache.ApplicationAffixService">
		<property name="objectPersistenceService" ref="webframework.service.objectpersistence"/>
	</bean>
	<bean id="cacheCompetitionFolderService" class="it.cnr.jconon.service.cache.CompetitionFolderService"/>

	<bean id="callAclInterceptor" parent="baseProxyInterceptor" class="it.cnr.jconon.interceptor.CallACLInterceptor">
		<property name="groupNames">
			<list>
				<value>GROUP_EVERYONE</value>
				<value>GROUP_CONCORSI</value>
			</list>
		</property>
		<property name="path" value="service/slingshot/doclib/permissions/"/>
	</bean>

	<bean id="abilitazioneCronScadenza" class="java.lang.Boolean">
		<constructor-arg value="${attiva.mail.solleciti}" />
	</bean>
	<bean id="cronExpressionScadenza" class="java.lang.String">
		<!-- run every day at 6 AM value="0 0 6 * * ?" -->
		<constructor-arg value="0 0 13 * * ?" />
	</bean>

	<bean id="UpdaterOnScheduleExecutor" class="it.cnr.jconon.scheduler.ScheduleExecutorService">
		<property name="cmisService" ref="cmisService" />
		<property name="abilitazioneCronScadenza" ref="abilitazioneCronScadenza" />
	</bean>
	<bean id="UpdaterOnScheduleJobDetail"
		class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject" ref="UpdaterOnScheduleExecutor" />
		<property name="targetMethod" value="execute" />
		<property name="concurrent" value="false" />
	</bean>
	<bean id="UpdaterOnScheduleJob" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail" ref="UpdaterOnScheduleJobDetail" />
		<property name="startDelay" value="1000" />
		<property name="cronExpression" ref="cronExpressionScadenza" />
	</bean>

	<bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<property name="triggers">
			<list>
				<ref bean="UpdaterOnScheduleJob" />
			</list>
		</property>
	</bean>

	<bean name="webscript.pages.call.call.post, webscript.pages.call.call.delete"
		class="it.cnr.jconon.web.scripts.call.CallWebScript"
		parent="webscript.default">
	</bean>
	<bean id="webscript.pages.call.publish.post"
		class="it.cnr.jconon.web.scripts.call.CallPublishWebScript"
		parent="webscript.default">
	</bean>
	<bean id="webscript.pages.call.child.post"
		class="it.cnr.jconon.web.scripts.call.CallCreateChildWebScript"
		parent="webscript.default">
	</bean>
	<bean id="webscript.pages.call.final.get" class="it.cnr.jconon.web.scripts.call.CallFinalWebScript"
		parent="webscript.default">
	</bean>

	<bean name="webscript.pages.application.application.get, webscript.pages.application.application.post,
		webscript.pages.application.application.delete"
		class="it.cnr.jconon.web.scripts.application.ApplicationWebScript"
		parent="webscript.default">
		<property name="documentsNotRequired" ref="documentsNotRequired"/>
	</bean>
	<bean id="webscript.pages.application.send.post"
		class="it.cnr.jconon.web.scripts.application.ApplicationSendWebScript"
		parent="webscript.default">
		<property name="documentsNotRequired" ref="documentsNotRequired"/>
	</bean>
	<bean id="webscript.pages.application.reopen.post"
		class="it.cnr.jconon.web.scripts.application.ApplicationReopenWebScript"
		parent="webscript.default">
	</bean>
	<bean id="webscript.pages.application.paste.post"
		class="it.cnr.jconon.web.scripts.application.ApplicationPasteWebScript"
		parent="webscript.default">
	</bean>
	<bean id="webscript.pages.application.move_prodotto.post"
		class="it.cnr.jconon.web.scripts.application.ApplicationMoveProdottoWebScript"
		parent="webscript.default">
	</bean>
	<bean id="webscript.print.print-application.get" class="it.cnr.jconon.web.scripts.print.PrintApplication"
		parent="webscript.default">
	</bean>


	<bean id="webscript.search.content.get" class="it.cnr.cool.web.scripts.search.ContentGet"
		parent="webscript">
	</bean>

	<bean id="webscript.pages.application.print_dic_sost.get" class="it.cnr.jconon.web.scripts.print.PrintDicSostApplication"
		parent="webscript.search.content.get">
	</bean>

	<bean id="exportApplications" class="it.cnr.jconon.rest.ExportApplications"></bean>
	<bean id="exportApplicationsService" class="it.cnr.jconon.service.application.ExportApplicationsService"></bean>

	<bean id="webscript.pages.helpdesk" class="it.cnr.jconon.web.scripts.helpdesk.HelpDeskWebScript"
  		parent="webscript.default">
 	</bean>

   <bean id="cool" parent="baseScriptExtension" class="it.cnr.cool.jscript.CoolScriptUtils">
      <property name="extensionName">
         <value>cool</value>
      </property>
   </bean>

	<!-- Definzione dei Bean per i Messaggi Asincroni -->
	<bean id="jmsQueueA" class="${jms.service}">
		<property name="connectionFactoryName" value="${jms.connection.factory}" />
		<property name="queueName" value="${jms.queue.a}" />
	</bean>
	<bean id="jmsQueueB" class="${jms.service}">
		<property name="connectionFactoryName" value="${jms.connection.factory}" />
		<property name="queueName" value="${jms.queue.b}" />
	</bean>
	<bean id="jmsQueueC" class="${jms.service}">
		<property name="connectionFactoryName" value="${jms.connection.factory}" />
		<property name="queueName" value="${jms.queue.c}" />
	</bean>
	<bean id="jmsQueueD" class="${jms.service}">
		<property name="connectionFactoryName" value="${jms.connection.factory}" />
		<property name="queueName" value="${jms.queue.d}" />
	</bean>

	<bean id="jcononQueryService" class="it.cnr.jconon.service.JcononQueryService"></bean>
	<bean class="it.cnr.cool.rest.Search">
		<property name="queryService" ref="jcononQueryService" />
	</bean>


	<bean id="webscript.i18n" class="it.cnr.cool.web.scripts.I18nWebScript"
		parent="webscript.default">
	</bean>
	<bean class="it.cnr.cool.service.I18nServiceLocation">
		<property name="location" value="surf.webscripts.messages.cool-jconon"/>
	</bean>
</beans>
