<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">


	<bean id="RRDService" class="it.cnr.cool.cmis.service.RRDService"  depends-on="mailService,application.version">
		<property name="dictionaryTypeId" value="D:cm:dictionaryModel" />
		<property name="rrdPath" value="${rrd.path}" />
		<property name="skipMD5" value="${rrd.skipmd5:false}" />
	</bean>


	<bean id="permissionRepository" class="it.cnr.cool.repository.PermissionRepositoryImpl">
		<property name="rbacPath" value="${rbac.path}" />
	</bean>

	<bean id="permission" class="it.cnr.cool.web.PermissionServiceImpl" depends-on="permissionRepository">
	</bean>


	<bean id="cmisBaseCriteria" class="it.cnr.cool.cmis.service.CMISBaseCriteria" />

	<!-- Begin CMIS service Bean -->
	<bean id="cmisConfig" class="it.cnr.cool.cmis.service.CMISConfig">
		<constructor-arg>
			<map>
				<entry key="org.apache.chemistry.opencmis.binding.atompub.url"
					value="${org.apache.chemistry.opencmis.binding.atompub.url}" />
				<entry key="org.apache.chemistry.opencmis.binding.browser.url"
					value="${org.apache.chemistry.opencmis.binding.browser.url}" />
				<entry key="org.apache.chemistry.opencmis.binding.spi.type"
					value="${org.apache.chemistry.opencmis.binding.spi.type}" />
				<entry key="org.apache.chemistry.opencmis.binding.connecttimeout"
					value="${org.apache.chemistry.opencmis.binding.connecttimeout}" />
				<entry key="org.apache.chemistry.opencmis.binding.readtimeout"
					value="${org.apache.chemistry.opencmis.binding.readtimeout}" />
				<entry key="org.apache.chemistry.opencmis.binding.httpinvoker.classname"
					value="${org.apache.chemistry.opencmis.binding.httpinvoker.classname}" />
				<entry key="org.apache.chemistry.opencmis.session.repository.id"
					value="${org.apache.chemistry.opencmis.session.repository.id}" />

				<entry key="org.apache.chemistry.opencmis.binding.clientcompression"
					   value="${org.apache.chemistry.opencmis.binding.clientcompression}" />

				<entry key="org.apache.chemistry.opencmis.binding.compression"
					   value="${org.apache.chemistry.opencmis.binding.compression}" />

				<entry key="user.guest.username" value="${user.guest.username}" />
				<entry key="user.guest.password" value="${user.guest.password}" />
				<entry key="user.admin.username" value="${user.admin.username}" />
				<entry key="user.admin.password" value="${user.admin.password}" />
			</map>
		</constructor-arg>
	</bean>

	<bean id="cmisService" class="it.cnr.cool.cmis.service.CMISService">
		<property name="baseURL" value="${repository.base.url}" />
	</bean>

	<bean id="nodeMetadataService" class="it.cnr.cool.cmis.service.NodeMetadataService">
		<property name="datePattern" value="yyyy-MM-dd'T'HH:mm:ss.SSSZ" />
	</bean>

	<bean id="aclService" class="it.cnr.cool.cmis.service.ACLService"></bean>
	<bean id="nodeVersionService" class="it.cnr.cool.cmis.service.NodeVersionService"></bean>


	<bean id="cmisFolderService" class="it.cnr.cool.cmis.service.impl.FolderServiceImpl">
		<property name="dataDictionaryPath" value="${dataDictionary.path}" />
	</bean>


	<bean id="application.version" class="it.cnr.cool.cmis.service.VersionService"
		init-method="init"></bean>

	<bean id="frontOfficeHandler.log4jHandler" class="it.cnr.cool.frontOfficeHandler.Log4jHandler">
	</bean>

	<bean id="frontOfficeHandler.alfrescoHandler" class="it.cnr.cool.frontOfficeHandler.AlfrescoHandler"
		init-method="init">
		<property name="dataDictionaryPath" value="${dataDictionary.path}" />
	</bean>

	<bean id="frontOfficeService" class="it.cnr.cool.service.frontOffice.FrontOfficeService"
		init-method="init">
		<property name="handlers">
			<map key-type="java.lang.String" value-type="it.cnr.cool.frontOfficeHandler.ILoggerHandler">
				<entry key="l4j">
					<bean class="it.cnr.cool.frontOfficeHandler.Log4jHandler" />
				</entry>
				<entry key="alfrescoHandler">
					<ref bean="frontOfficeHandler.alfrescoHandler" />
				</entry>
			</map>
		</property>
	</bean>

	<bean id="folderChildrenService" class="it.cnr.cool.service.FolderChildrenService"></bean>

	<bean id="userService"
		class="it.cnr.cool.security.service.impl.alfresco.UserServiceImpl">
	</bean>
	<bean id="groupService"
		class="it.cnr.cool.security.service.impl.alfresco.GroupServiceImpl">
	</bean>

	<bean id="typesTreeService" class="it.cnr.cool.service.typestree.TypesTreeService" />

	<bean id="gsonBuilder" class="com.google.gson.GsonBuilder" />
	<bean id="gsonParser" class="it.cnr.cool.util.format.GsonParser"
		init-method="init">
	</bean>

	<bean id="cmisDefaultOperationContext"
		class="org.apache.chemistry.opencmis.client.runtime.OperationContextImpl">
		<property name="maxItemsPerPage" value="10" />
		<property name="cacheEnabled" value="false" />
	</bean>

	<bean id="i18nService" class="it.cnr.cool.service.I18nService"/>
	<bean class="it.cnr.cool.service.I18nServiceLocation" name="coolI18nServiceLocation">
		<property name="location" value="surf.webscripts.messages.cool-common"/>
	</bean>

	<bean id="queryService" class="it.cnr.cool.service.QueryService"></bean>

	<bean id="webframework.factory.user.cmis" class="it.cnr.cool.security.CMISAuthenticatorFactory" />

	<bean id="proxyInterceptor" class="it.cnr.cool.interceptor.ProxyInterceptor" />
</beans>
